/* pages/vote/vote.wxss */
.vote-box{
  padding: 28rpx;
}
.vote-box .logo{
  display: block;
  margin: auto;
  width: 150rpx;
  height: 150rpx;
}
.vote-box .title{
  margin: 28rpx 0 0;
  line-height: 50rpx;
  font-size: 32rpx;
  text-indent: 40rpx;
  background: no-repeat 0 10rpx;
  background-size: 30rpx 30rpx;
}
.vote-box .chose-box{
  margin: 28rpx 0 0;
  padding: 0 40rpx;
  line-height: 40rpx;
}
.chose-box .item{
  margin: 0 0 28rpx;
  padding: 14rpx 20rpx;
  border: solid 2rpx #ccc;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #ccc;
}
.chose-box .item.active{
  border-color: #1296db;
  color: #1296db;
}

.vote-box .tips{
  padding: 0 40rpx;
  font-size: 24rpx;
  color: #1296db;
}
.vote-box .vote-btn{
  margin: 120rpx 40rpx 0;
  background: #ccc;
  color: #333;
}
.vote-box .vote-btn.active{
  background: #1296db;
  color: #fff;
}